{
	"arrowParens": "always",
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "off",
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "strict",
	"insertPragma": true,
	"jsxSingleQuote": true,
	"printWidth": 100,
	"proseWrap": "always",
	"quoteProps": "consistent",
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": false,
	"overrides": [
		{
			"files": "*.json",
			"options": { "tabWidth": 2 }
		},
		{
			"files": "*.md",
			"options": { "proseWrap": "preserve" }
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": { "tabWidth": 2 }
		}
	]
}
